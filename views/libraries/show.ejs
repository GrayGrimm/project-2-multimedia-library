<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= currentMovie.name %></title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= currentMovie.name %></h1>
   <ul>
        <% for (const attribute in currentMovie._doc) { %>
            <% if (currentMovie._doc.hasOwnProperty(attribute) && attribute !== '_id') { %>
                <li>
                    <strong><%= attribute %>:</strong> <%= currentMovie._doc[attribute] %>
                </li>
            <% } %>
        <% } %>
    </ul>
    <a href="/users/<%= user._id%>/libraries/currentMovie_id/edit.ejs">Edit</a>

</body>
</html>